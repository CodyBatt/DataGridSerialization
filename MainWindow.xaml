<Window x:Class="DataGridSerialization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:DataGridSerialization"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <local:ColumnManager DataGrid="{Binding ElementName=DataGrid1}" />
        <!--
        <local:ColumnManager SerializationId="Grid2" DataGrid="{Binding ElementName=DataGrid2}"/>
        -->
        <DataGrid Name="DataGrid1" ItemsSource="{Binding Items}" RowHeaderWidth="0" AutoGenerateColumns="True" Margin="0,0,0,10"/>
        <!--
        <DataGrid Name="DataGrid2" ItemsSource="{Binding Items}" RowHeaderWidth="0" AutoGenerateColumns="True" Grid.Row="1"/>
        <DataGrid Name="DataGrid3" ItemsSource="{Binding Items}" RowHeaderWidth="0" AutoGenerateColumns="False" Grid.Row="2"></DataGrid>
        -->
    </Grid>
</Window>
